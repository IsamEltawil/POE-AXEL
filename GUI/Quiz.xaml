<Window x:Class="QuizApp.Quiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="400" Width="500">
    <StackPanel Margin="10">
        <TextBlock x:Name="QuestionText" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>
        <StackPanel x:Name="OptionsPanel" Margin="0,0,0,10"/>
        <Button Content="Submit Answer" Click="SubmitAnswer_Click" Margin="0,0,0,10"/>
        <TextBlock x:Name="ScoreText" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="HighScoreText" FontStyle="Italic" FontSize="12"/>
    </StackPanel>
</Window>